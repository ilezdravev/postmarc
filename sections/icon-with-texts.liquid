<div class="section-wrap" style="background-color: {{ section.settings.bg_color }};">
  <div class="Container">
    <div class="icon-with-text_blocks-wrap">
      {% for block in section.blocks %}
        <div class="icon-with-text-item">
          <div class="icon-content">
            {% if block.settings.icon_svg_content != '' or block.settings.icon_svg_content != blank %}
              {{ block.settings.icon_svg_content }}
            {% else %}
              <img src="{{ block.settings.icon_image | img_url: '200x' }}" alt="icon"/>
            {% endif %}
          </div>
          <div class="texts-content">
            <h3 class="title">{{ block.settings.title }}</h3>
            <div class="subtitle">{{ block.settings.subtitle }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>

</style>

{% schema %}
  {
    "name": "Icon with Texts",
    "class": "icon-with-texts-section",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon_image",
            "label": "Icon Image"
          },
          {
            "type": "html",
            "id": "icon_svg_content",
            "label": "Icon SVG Content"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "subtitle",
            "label": "Subtitle"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Icon with Texts"
      }
    ]
  }
{% endschema %}